<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.12">

        <Button
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:text="New Game"
            android:id="@+id/newGameButton"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:background="@drawable/button"
            android:onClick="newGame"
            android:layout_weight="0.12"
            android:layout_marginTop="66dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/settingsButton"
            android:layout_alignStart="@+id/settingsButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistics"
            android:background="@drawable/button"
            android:id="@+id/statisticsButton"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/newGameButton"
            android:layout_alignLeft="@+id/newGameButton"
            android:layout_alignStart="@+id/newGameButton"
            android:layout_alignRight="@+id/newGameButton"
            android:layout_alignEnd="@+id/newGameButton" />

        <Button
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/settingsButton"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:background="@drawable/button"
            android:layout_weight="0.10"
            android:layout_below="@+id/statisticsButton"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>